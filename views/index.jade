extends layout
block content
	div.container
		div.header
			div.logo
				img(src='images/logo.png')

			div.course_command
				a.help(href='#')
					img(src='images/help.png')
				a.close(href='#')
					img(src='images/close.png')

		div#home_content
			div.title #{courceTitle}
			div.content
				div.main_content #{jsonData[0].content}

				div.right_section
					div.transcript
						img(src='images/css3.png')

			div.footer
				div.controls
					div#play
						img(src='images/play.png')
					div#prev
						img(src='images/prev.png')
					div#next
						img(src='images/next.png')
					div#seekbar
						div#progress
					div#pagination 1 of 3 Pages

					div#menu
						div#current
						ul
							li.lesson
								a(href='#')
									span #{courceTitle}

