extends layout
block content
	div.container
		div.header
			div.logo
				img(src='#{logoImg}')

			div.course_command
				a.help(href='#')
					img(src='#{helpImg}')
				a.close(href='#')
					img(src='#{closeImg}')

		div#home_content
			div.title #{courceTitle}
			div.content
				each data in jsonData
					div.main_content
						p #{data.content}

				div.right_section
					div.transcript
						each data in jsonData
							img(src='#{data.contentImg}')

			div.footer
				div.controls
					div#play
						img(src='#{playImg}')
					div#prev
						img(src='#{prevImg}')
					div#next
						img(src='#{nextImg}')
					div#seekbar
						div#progress
					div#pagination 1 of 3 Pages

					div#menu
						div#current
						ul
							li.lesson
								a(href='#')
									span #{courceTitle}

